<Window x:Class="NUC_Controller.Windows.MessageViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NUC_Controller.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        KeyDown="Window_KeyDown"
        Title="MessageViewer" Height="170" Width="220">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="34"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock x:Name="textMessage" VerticalAlignment="Center" HorizontalAlignment="Center">Message</TextBlock>

        <DockPanel Grid.Row="1" Margin="5" HorizontalAlignment="Center">
            <Button Width="80" Margin="0,0,10,0" x:Name="buttonYes" Click="buttonYes_Click">Yes</Button>
            <Button Width="80" x:Name="buttonNo" Click="buttonNO_Click">No</Button>
        </DockPanel>
    </Grid>
</Window>
